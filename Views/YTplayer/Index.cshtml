@{
    ViewData["Title"] = "YTplayer";
}


<div class="videocontainer">
    <div id="outer_div_a" class="videodiv">
        <div class="container_b" style="display: flex;">
            <input id="input_url_a" type="text" placeholder="請輸入網址" style="flex: 1;">
            <button class="circle_button" style="margin-left: 5px;" onclick="changeIframeSrc_a()">開啟</button>
            <button class="circle_button" onclick="fold_a()">摺疊</button>
        </div>
        <div id="iframe_div_a" style="display: block; height: 100%; width: 100%; border: 1px solid #ccc;">
            <iframe id="iframe_a" src="https://www.youtube.com/embed/kPmy7jGf_i0" allowfullscreen></iframe>
        </div>
    </div>
    <div id="outer_div_b" class="videodiv">
        <div class="container_b" style="display: flex;">
            <input id="input_url_b" type="text" placeholder="請輸入網址" style="flex: 1;">
            <button class="circle_button" style="margin-left: 5px;" onclick="changeIframeSrc_b()">開啟</button>
            <button class="circle_button" onclick="fold_b()">摺疊</button>
        </div>
        <div id="iframe_div_b" style="display: block; height: 100%; width: 100%; border: 1px solid #ccc;">
            <iframe id="iframe_b" src="https://www.youtube.com/embed/4G0y853Z-WE" allowfullscreen></iframe>
        </div>
    </div>
</div>